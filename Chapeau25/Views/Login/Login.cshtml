@model Chapeau25.Models.Login

@{
    ViewData["Title"] = "Login";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow p-4" style="min-width: 350px; max-width: 400px;">
        <h2 class="text-center mb-4">Login</h2>
        <form asp-action="Login" method="post">
            <div class="mb-3">
                <label asp-for="Username" class="form-label"></label>
                <input asp-for="Username" class="form-control" autocomplete="username" />
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" type="password" class="form-control" autocomplete="current-password" />
            </div>
            <button type="submit" class="btn btn-primary w-100">Login</button>
            <div asp-validation-summary="All" class="text-danger mt-2"></div>
        </form>
    </div>
</div>